{
    "name": "xypp/forum-quests",
    "description": "Add quests to the forum, and reward with money or other things",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0",
        "xypp/collector": "*",
        "xypp/flarum-localize-date-lib": "*"
    },
    "authors": [
        {
            "name": "小鱼飘飘",
            "email": "z@xypp.cc",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Xypp\\ForumQuests\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Forum Quests",
            "category": "feature",
            "icon": {
                "name": "fas fa-tasks",
                "color": "#fff",
                "backgroundColor": "#01579b"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": true,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": true,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "xypp/store": "*",
        "flarum/likes": "*",
        "michaelbelgium/flarum-discussion-views": "^7.3",
        "v17development/flarum-user-badges": "^1.1"
    }
}